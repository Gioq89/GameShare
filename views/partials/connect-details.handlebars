<form class="genre-form">
    <label for="genre">Genre</label>
    <select id="user-genre">
        <option value="MMORPG">MMORPG</option>
        <option value="Shooter">Shooter</option>
        <option value="Strategy">Strategy</option>
        <option value="Racing">Racing</option>
        <option value="Sports">Sports</option>
        <option value="Social">Social</option>
        <option value="Sandbox">Sandbox</option>
        <option value="Open-World">Open World</option>
        <option value="Survival">Survival</option>
        <option value="Horror">Horror</option>
        <option value="Voxel">Voxel</option>
        <option value="Zombie">Zombie</option>
        <option value="Turn-Based">Turn-based</option>
        <option value="First-Person">First-person</option>
        <option value="Third-Person">Third-person</option>
        <option value="Top-Down">Top-down</option>
        <option value="Tank">Tank</option>
        <option value="Space">Space</option>
        <option value="Sailing">Sailing</option>
        <option value="Side-Scroller">Side-Scroller</option>
        <option value="Superhero">Superhero</option>
        <option value="Permadeath">Permadeath</option>
        <option value="Card">Card</option>
        <option value="Battle-Royale">Battle Royale</option>
        <option value="MMOFPS">MMOFPS</option>
        <option value="MMORTS">MMORTS</option>
        <option value="MMOTPS">MMOTPS</option>
        <option value="Anime">Anime</option>
        <option value="Fantasy">Fantasy</option>
        <option value="Sci-fi">Sci-fi</option>
        <option value="Fighting">Fighting</option>
        <option value="Action-RPG">Action-RPG</option>
        <option value="Military">Military</option>
        <option value="Martial-Arts">Martial Arts</option>
        <option value="Flight">Flight</option>
        <option value="Low-Spec">Low-spec</option>
        <option value="Tower-Defense">Tower Defense</option>
     </select>
    <button class="submit-genre" type="submit">Submit</button>
</form>

<form class="platform-form">
    <label for="platform">Platform</label>
    <select id="user-platform">
        <option value="PC">PC</option>
        <option value="Mobile">Mobile</option>
        <option value="Console">Console</option>
    </select>
    <button class="submit-platform" type="submit">Submit</button>
</form>

<div class="columns is-flex is-flex-direction-column box game-font">
    {{#each users as |user|}}
        <a href="/profile/{{user.username}}">
        <h1>{{user.username}}</h1>
        </a>
        <h3>{{user.interestedGenre}}</h3>
        <h3>{{user.preferredPlatform}}</h3>
    {{/each}}
</div>

<script src="/js/search-category-users.js"></script>
<script src="/js/search-platform-users.js"></script>